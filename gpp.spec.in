%define ver @VERSION@
%define rel 1
%define prefix /usr

Prefix: %{prefix}

Summary: Generic pretty-printer, using plugins
Name: gpp
Version: %{ver}
Release: %{rel}
Source: http://ftp.megacoder.com/gpp/%{name}-%{ver}.tar.gz
License: GPLv2
URL: http://www.megacoder.com/
Group: Applications/System
BuildRoot: %{_tmppath}/%{name}-root
BuildArch: noarch
BuildRequires: python
Requires: python

%description
Generic pretty-printer, with plugins

%prep

%setup -q
%build

%install
	rm -rf ${RPM_BUILD_ROOT}
	mkdir -p ${RPM_BUILD_ROOT}%{python_sitelib}/%{name}
	install -c -m 0644 src/plugins/*.py ${RPM_BUILD_ROOT}%{python_sitelib}/%{name}/

%clean
	rm -rf ${RPM_BUILD_ROOT}

%files
%defattr(-,root,root)
%doc AUTHORS COPYING README INSTALL NEWS LICENSE TODO
%{_bindir}/%{name}
%{python_sitelib}/%{name}/

