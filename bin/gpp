#!/usr/bin/python
#vim: noet sw=4 ts=4

import	os
import	sys
import	__main__

# This hopscotch lets us run from the development directory
# and is ignored if run from an installed place.

here = os.path.abspath(
    __main__.__file__
)
if here.startswith( os.getenv( 'HOME' ) ):
    sys.path.append(
	os.path.abspath(
	    os.path.join(
		os.path.dirname( here ),
		"../.."
	    )
	)
    )

try:
    import	generic_prettyprinter as gpp
except Exception, e:
    print >>sys.stderr, 'Cannot locate generic_prettyprinter'
    print >>sys.stderr, 'Module path:'
    for path in sys.path:
	print >>sys.stderr, '\t%s' % path
    print >>sys.stderr, e
    raise e

pp = gpp.GenericPrettyPrinter()
exit(pp.prettyprint(
	os.path.join( os.path.dirname( gpp.__file__ ), 'plugins' )
))
